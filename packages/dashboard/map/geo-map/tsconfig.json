{
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "declaration": true,
    "target": "ESNext",
    "newLine": "LF",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "outDir": "./dist",
    "skipLibCheck": true,
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./src"]
}
